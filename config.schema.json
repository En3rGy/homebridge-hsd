{
  "pluginAlias": "hsd",
  "pluginType": "platform",
  "singular": false,
  "schema": {
    "type": "object",
    "properties": {
      "hsIp": {
        "title": "Homeserver IP",
        "type": "string",
        "required": true,
        "format": "ipv4"
      },
      "hsUserName": {
        "title": "HS user name",
        "type": "string",
        "required": true
      },
      "hsUserPw": {
        "title": "HS user password",
        "type": "string",
        "required": true
      },
      "hsPort": {
        "title": "HS Port",
        "type": "number",
        "required": true,
        "default": "443"
      },
      "accessories": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Accessory Name",
              "type": "string",
              "required": true,
              "description": "E.g. floor level"
            },
            "services": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "title": "Service Name",
                    "type": "string",
                    "required": true,
                    "description": "Room Name"
                  },
                  "serviceType": {
                    "type": "object",
                    "properties": {
                      "serviceTypeName": {
                        "type": "string",
                        "title": "Service Type",
                        "required": true,
                        "oneOf": [
                          {
                            "title": "Lightbulb", "enum": ["Lightbulb"]
                          },
                          {
                            "title": "Outlet", "enum": ["Outlet"]
                          },
                          {
                            "title": "Switch", "enum": ["Switch"]
                          },
                          {
                            "title": "Garage Door Opener", "enum": ["GarageDoorOpemer"]
                          }
                        ]
                      },
                      "characteristics": {
                        "type": "array",
                        "items": {
                          "characteristicName": {
                            "title": "Characteristics",
                            "type": "string",
                            "enum": [
                              "On", "Current Door State", "Target Door State", "Obstruction Detection"
                            ]
                          },
                          "endpoints": {
                            "type": "array",
                            "items": {
                              "title": "Endpoints",
                              "type": "string"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "form": null,
  "display": null
}