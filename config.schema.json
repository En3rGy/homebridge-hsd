{
  "pluginAlias": "hsd",
  "pluginType": "platform",
  "singular": false,
  "layout": [
    {
      "key": "name"
    },
    {
      "key": "knxIpGatewayIp",
      "placeholder": "192.168.x.x"
    },
    {
      "type": "section",
      "title": "Accessories",
      "expandable": true,
      "expanded": false,
      "items": [
        {
          "key": "accessories",
          "notitle": true,
          "type": "array",
          "items": [
            {
              "type": "div",
              "items": [
                {
                  "key": "accessories[].name"
                },
                {
                  "key": "accessories[].services",
                  "title": "Services",
                  "type": "section",
                  "expandable": true,
                  "expanded": false,
                  "items": [
                    {
                      "key": "accessories[].services[].name"
                    },
                    {
                      "key": "accessories[].services[].id"
                    },
                    {
                      "key": "accessories[].services[].endpoints",
                      "title": "Homeserver Endpoints",
                      "expandable": true,
                      "expanded": false,
                      "type": "section",
                      "items": [
                        {
                          "type": "div",
                          "items": [
                            {
                              "key": "accessories[].services[].endpoints[]"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "key": "accessories[].services[].options",
                      "title": "Options",
                      "expandable": true,
                      "expanded": false,
                      "type": "section",
                      "items": [
                        {
                          "type": "div",
                          "items": [
                            {
                              "key": "accessories[].services[].options[]"
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "section",
      "title": "Notes",
      "expandable": true,
      "expanded": false,
      "items": [
        {
          "key": "notes",
          "type": "textarea",
          "notitle": true
        }
      ]
    }
  ],
  "schema": {
    "type": "object",
    "properties": {
      "hsIp": {
        "title": "Homeserver IP",
        "type": "string",
        "required": true,
        "format": "ipv4"
      },
      "hsUserName": {
        "title": "HS user name",
        "type": "string",
        "required": true
      },
      "hsUserPw": {
        "title": "HS user password",
        "type": "string",
        "required": true
      },
      "hsPort": {
        "title": "HS Port",
        "type": "number",
        "required": true,
        "default": "443"
      },
      "accessories": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Accessory Name",
              "type": "string",
              "required": true
            },
            "services": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "title": "Service Name",
                    "type": "string",
                    "required": true
                  },
                  "id": {
                    "title": "Service Type",
                    "type": "string",
                    "required": true,
                    "oneOf": [
                      {
                        "title": "Lightbulb",
                        "enum": [
                          "Lightbulb"
                        ]
                      },
                      {
                        "title": "Outlet",
                        "enum": [
                          "Outlet"
                        ]
                      },
                      {
                        "title": "Switch",
                        "enum": [
                          "Switch"
                        ]
                      }
                    ]
                  },
                  "endpoints": {
                    "type": "array",
                    "items": {
                      "title": "Endpoints",
                      "type": "string"
                    }
                  },
                  "options": {
                    "type": "array",
                    "items": {
                      "title": "Option",
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "notes": {
        "type": "string"
      }
    }
  },
  "form": null,
  "display": null
}