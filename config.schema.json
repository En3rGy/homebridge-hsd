{
  "pluginAlias": "hsd",
  "pluginType": "platform",
  "singular": false,
  "schema": {
    "type": "object",
    "properties": {
      "hsIp": {
        "title": "Homeserver IP",
        "type": "string",
        "required": true,
        "format": "ipv4"
      },
      "hsUserName": {
        "title": "HS user name",
        "type": "string",
        "required": true
      },
      "hsUserPw": {
        "title": "HS user password",
        "type": "string",
        "required": true
      },
      "hsPort": {
        "title": "HS Port",
        "type": "number",
        "required": true,
        "default": "443"
      },
      "accessories": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Accessory Name",
              "type": "string",
              "required": true,
              "description": "E.g. Room"
            },
            "services": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "title": "Service Name",
                    "type": "string",
                    "required": true
                  },
                  "serviceType": {
                    "type": "object",
                    "properties": {
                      "serviceTypeName": {
                        "type": "string",
                        "title": "Service Type",
                        "required": true,
                        "oneOf": [
                          {
                            "title": "Lightbulb", "enum": ["Lightbulb"]
                          },
                          {
                            "title": "Outlet", "enum": ["Outlet"]
                          },
                          {
                            "title": "Switch", "enum": ["Switch"]
                          },
                          {
                            "title": "Garage Door Opener", "enum": ["GarageDoorOpemer"]
                          }
                        ]
                      },
                      "characteristics": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "characteristicName": {
                              "title": "Characteristics",
                              "type": "string",
                              "enum": [
                                "On", "Current Door State", "Target Door State", "Obstruction Detection"
                              ]
                            },
                            "endpoints": {
                              "type": "array",
                              "items": {
                                "endpointId": {
                                  "title": "Endpoints",
                                  "type": "string"
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "layout": [
    {
      "key": "hsIp",
      "title": "HS IP",
      "placeholder": "192.168.x.x"
    },
    {
      "key": "hsUserName",
      "title": "HS User Name"
    },
    {
      "key": "hsUserPw",
      "title": "HS User Password"
    },
    {
      "key": "hsPort",
      "title": "HS Port"
    },
    {
      "key": "accessories",
      "type": "array",
      "items": [
        "accessories[].name",
        {
          "key": "accessories[].services",
          "type": "array",
          "items": [
            "accessories[].services[].name",
            {
              "key": "accessories[].services[].serviceType",
              "type": "array",
              "items": [              
                "accessories[].services[].serviceTypeName",
                {
                  "key": "accessories[].services[].characteristics",
                  "type": "array",
                  "items": [
                    "accessories[].services[].characteristics[].characteristicName",
                    {
                      "key": "accessories[].services[].characteristics[].endpoints",
                      "type": "array",
                      "items": [
                        "accessories[].services[].characteristics[].endpoints[].endpointId"
                      ]
                    }
                  ]                  
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "form": null,
  "display": null
}