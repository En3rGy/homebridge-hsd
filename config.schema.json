{
  "pluginAlias": "hsd",
  "pluginType": "platform",
  "footerDisplay": "v0.8",
  "singular": false,
  "schema": {
    "required": ["hsIp", "hsUserName", "hsUserPw", "hsPort", "accessories"],
    "type": "object",
    "properties": {
      "hsIp": {
        "title": "Homeserver IP",
        "type": "string",
        "format": "ipv4",
        "description": "e.g. 192.168.x.x"
      },
      "hsUserName": {
        "title": "HS User Name",
        "type": "string"
      },
      "hsUserPw": {
        "title": "HS user password",
        "type": "string"
      },
      "hsPort": {
        "title": "HS Port",
        "type": "number",
        "default": 443
      },
      "accessories": {
        "type": "array",
        "title": "Accessories",
        "expandable": true,
        "expanded": false,
        "items": {
          "type": "object",
          "required": ["accessoryName"],
          "properties": {
            "accessoryName": {
              "title": "Accessory Name",
              "type": "string",
              "description": "E.g. room"
            },
            "services": {
              "type": "array",
              "expandable": true,
              "expanded": false,      
              "items": {
                "type": "object",
                "properties": {
                  "serviceName": {
                    "title": "Service Name",
                    "type": "string",
                    "required": true
                  },
                  "serviceType": {
                    "type": "string",
                    "title": "Service Type",
                    "required": true,
                    "default": "Lightbulb",
                    "oneOf": [
                      { "title": "Lightbulb", "enum": ["Lightbulb"] },
                      { "title": "Outlet", "enum": ["Outlet"] },
                      { "title": "Switch", "enum": ["Switch"] },
                      { "title": "Garage Door Opener", "enum": ["GarageDoorOpener"] },
                      { "title": "Window", "enum": ["Window"] }
                    ]
                  },                  
                  "characteristics": {
                    "type": "array",
                    "expandable": true,
                    "expanded": false,                  
                    "items": {
                      "type": "object",
                      "properties": {
                        "characteristicName": {
                          "title": "Characteristics",
                          "type": "string",
                          "default": "On",
                          "description": "<h4>Endpoints</h4><p><ul><li>Brightness: 1=set, 2=get</li><li>On: 1=set, 2=get</li><li>CurrentDoorState: 1=get</li><li>TargetDoorState: 1=set, 2=get</li><li>ObstructionDetected: 1=get</li></ul></p>",
                          "oneOf": [
                            { "title": "Brightness", "enum": ["Brightness"]},
                            { "title": "On", "enum": ["On"]},
                            { "title": "Current Door State", "enum": ["CurrentDoorState"]},
                            { "title": "Target Door State", "enum": ["TargetDoorState"]},
                            { "title": "Obstruction Detection", "enum": ["ObstructionDetection"]},
                            { "title": "Position State", "enum": ["PositionState"]},
                            { "title": "Target Position", "enum": ["TargetPosition"]}
                            { "title": "Current Temperature", "enum": ["CurrentTemperature"]}
                          ]
                        },
                        "endpoints": {
                          "type": "array",
                          "expandable": true,
                          "expanded": false,                        
                          "items": {
                            "title": "Endpoints",
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}